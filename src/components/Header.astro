---

import type { Props } from '@astrojs/starlight/props';
import SiteTitle from './SiteTitle.astro';
import Button from './Button.astro';
---

<div class="container">
  <hr class="absolute bottom-0 w-full h-px -translate-x-1/2 border-0 opacity-10 left-1/2" style="background-image:linear-gradient(270deg, rgba(255, 255, 255, 0.00) 0%, #FFF 52.07%, rgba(255, 255, 255, 0.00) 100%)"/>
  <div class="flex w-full items-center lg:relative lg:justify-between h-14 lg:h-18">
    <div class="flex basis-1/3 w-full">
      <div class="h-5 w-full ">
        <SiteTitle {...Astro.props} />
      </div>
    </div>
    <div class="flex basis-1/3 w-full justify-center m-0">
      <ul class="flex list-none items-center gap-2">
        <li><a href="#" class="no-underline text-white bg-transparent text-sm flex justify-center px-2 xl:px-4 border-0 relative z-10 hover:text-opacity-70">Home</a></li>
        <li><a href="#" class="no-underline text-white bg-transparent text-sm flex justify-center px-2 xl:px-4 border-0 relative z-10 hover:text-opacity-70">About</a></li>
        <li><a href="#" class="no-underline text-white bg-transparent text-sm flex justify-center px-2 xl:px-4 border-0 relative z-10 hover:text-opacity-70">Contact</a></li>
        <li><a href="#" class="no-underline text-white bg-transparent text-sm flex justify-center px-2 xl:px-4 border-0 relative z-10 hover:text-opacity-70">Blog</a></li>
      </ul>
    </div>
    <div class="basis-1/3 w-full flex items-center justify-end gap-4">
      <Button variant="primary" >Book a Demo</Button>
      <a href="#" class="no-underline text-white bg-transparent text-sm flex justify-center px-2 xl:px-4 border-0 relative z-10 hover:text-opacity-70">Log in</a>
    </div>
  </div>
</div>