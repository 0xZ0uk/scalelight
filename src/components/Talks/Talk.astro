---
import { Icon } from '@astrojs/starlight/components';

interface Props {
  title: string;
  author: {
    name: string;
    picture: string;
  };
  idx: number;
  url: string;
}

const { title, author, url, idx } = Astro.props;
---

<button class:list={["keen-slider__slide !mt-0 events_event-card rounded-2xl relative text-left !opacity-100 !visible focus-visible:outline outline-[rgba(255,255,255,0.64)] outline-offset-[3px] bg-white/[0.01]", `number-slide${idx}`]}>
  <div class="flex items-center justify-start h-full transition-colors rounded-2xl bg-[#D1AAD7]/[0.01]">
    <img
      alt={author.name}
      src={author.picture}
      loading="lazy"
      width="150"
      height="150"
      decoding="async"
      data-nimg="1"
      style="color:transparent"
      sizes="(min-width: 1280px) 190px, (min-width: 640px) 150px, 140px"
      class="rounded-l-2xl mt-auto xl:max-w-max -mb-2 sm:mb-0"
    />
    <div class="w-full flex flex-col pr-2.5 sm:pr-4 lg:pr-10 -ml-3 sm:ml-0">
      <p class="mb-0 pb-0 text-xs font-medium sm:text-sm text-accent-200">Tech Talk</p>
      <p class="text-lg leading-6 sm:text-xl lg:text-2xl sm:leading-[111%] line-clamp-2">{title}</p>
      <p class="text-xs font-medium sm:text-sm text-white/60">by {author.name}</p>
    </div>
  </div>
  <div class="absolute items-center duration-150 overflow-hidden justify-center w-6 h-6 rounded-2xl group-hover:bg-white bg-white/10 border group-hover:border-white transition-colors ease-linear border-white/[0.13] flex rounded-full pointer-events-none right-3 bottom-3 sm:right-4 sm:bottom-4 sm:w-10 sm:h-10">
    <Icon name="youtube" size="1rem" class='transition-colors duration-150 ease-linear group-hover:text-black' />
  </div>
</button>

<style>
  .events_event-card {
    border-radius: 16px;
  }

  .events_event-card:before {
    content: "";
    position: absolute;
    border-radius: 16px;
    inset: 0;
    background-color: rgba(7, 7, 7, .6);
    -webkit-backdrop-filter: blur(10px);
    backdrop-filter: blur(10px);
    z-index: -1;
  }

  .events_event-card:after {
    content: "";
    position: absolute;
    border-radius: 16px;
    inset: 0;
    z-index: 1;
    background: hsla(0, 0%, 100%, .02);
    box-shadow: inset 0 24px 48px 0 rgba(199, 211, 234, .05), inset 0 1px 1px 0 rgba(199, 211, 234, .12);
    border: 1px solid rgba(209, 170, 215, .06);
    transition: all .3s ease;
  }
</style>